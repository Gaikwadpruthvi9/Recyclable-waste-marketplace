{
    "compilerOptions": {
        "target": "ES2020",
        "module": "esnext",
        "lib": [
            "ES2020"
        ],
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}